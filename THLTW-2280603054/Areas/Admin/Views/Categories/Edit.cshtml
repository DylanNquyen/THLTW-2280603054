@* Admin/Categories/Edit.cshtml *@
@model NguyenNgocThien_BanHang.Models.Category
@{
    ViewData["Title"] = "Chỉnh sửa danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="card border border-gold shadow-sm">
        <div class="card-header bg-header-gradient text-white">
            <h3 class="mb-0">
                <i class="fas fa-edit me-2"></i>Chỉnh sửa danh mục
            </h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label fw-medium">Tên danh mục <span class="text-danger">*</span></label>
                    <div class="input-group">
                        <span class="input-group-text bg-header-gradient text-white border-0">
                            <i class="fas fa-tag"></i>
                        </span>
                        <input asp-for="Name" class="form-control border-gold" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label fw-medium">Mô tả <span class="text-danger">*</span></label>
                    <div class="input-group">
                        <span class="input-group-text bg-header-gradient text-white border-0">
                            <i class="fas fa-align-left"></i>
                        </span>
                        <textarea asp-for="Description" class="form-control border-gold" rows="4"></textarea>
                    </div>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="border-top pt-3 mt-3 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-purple">
                        <i class="fas fa-save me-1"></i> Cập nhật danh mục
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
                     <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
                <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

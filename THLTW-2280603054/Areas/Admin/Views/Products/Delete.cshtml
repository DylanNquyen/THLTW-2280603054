@model NguyenNgocThien_BanHang.Models.Product

@{
    ViewData["Title"] = "Xóa sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card jumbotron text-white shadow-lg rounded-3 border border-accent p-5">
                <h1 class="display-4 fw-bold mb-2">Xóa sản phẩm</h1>
                <p class="lead mb-0">Xác nhận xóa sản phẩm khỏi Dylan Shop</p>
                <hr class="my-3 border-light opacity-50">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="small">Cập nhật: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</span>
                    <a href="#" class="btn btn-outline-light btn-sm"><i class="fas fa-sync-alt me-1"></i> Làm mới</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Section -->
    <div class="row g-4">
        <div class="col-12">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-header bg-white border-bottom py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold text-dark"><i class="fas fa-trash me-2"></i> Xóa sản phẩm: @Model.Name</h5>
                    <a href="http://localhost:5015/Admin/Products" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
                    </a>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning mb-4">
                        <i class="fas fa-exclamation-triangle me-2"></i> Bạn có chắc chắn muốn xóa sản phẩm <strong>@Model.Name</strong>? Hành động này không thể hoàn tác.
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-4">
                            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded-3 shadow-sm" style="max-height: 300px; object-fit: cover;">
                        </div>
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-3">Tên sản phẩm</dt>
                                <dd class="col-sm-9">@Model.Name</dd>

                                <dt class="col-sm-3">Mô tả</dt>
                                <dd class="col-sm-9">@Model.Description</dd>

                                <dt class="col-sm-3">Giá</dt>
                                <dd class="col-sm-9">@Model.Price.ToString("N0") đ</dd>

                                <dt class="col-sm-3">Tồn kho</dt>
                                <dd class="col-sm-9">@Model.Stock</dd>

                                <dt class="col-sm-3">Danh mục</dt>
                                <dd class="col-sm-9">@Model.Category?.Name</dd>
                            </dl>
                        </div>
                    </div>
                    <form href="http://localhost:5015/Admin/Products/Delete/1" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i> Xác nhận xóa
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <style>
            .border-accent {
                border-color: var(--accent-color) !important;
            }
            .jumbotron {
                background: linear-gradient(135deg, #333333, #555555);
                border: 1px solid var(--accent-color);
                box-shadow: 0 0.25rem 0.75rem rgba(0, 0, 0, 0.1);
            }
            .card-header {
                border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            }
            .btn-danger {
                background: #dc3545;
                border-color: #dc3545;
            }
            .btn-danger:hover {
                background: #c82333;
                border-color: #bd2130;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }
        </style>
}